<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {# the CSS file lives at "public/css/style.css" #}
            <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>


        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav>
            <ul>
                {% if app.user %}
                    {#{{ dump(app.user) }}#}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Log out</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('app_mission_list', [], true) }}">My missions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_leave_index') }}">Absences</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_project_index') }}">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_carsEmp_index') }}">Car changes</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Login </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
