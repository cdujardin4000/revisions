{% extends 'base.html.twig' %}

{% block title|upper %}Mission index{% endblock %}

{% block body %}

    <h1>Mission index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Mission_id</th>
                <th>Id</th>
                <th>Description</th>
                <th>Due_date</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr>
                <td>{{ mission.mission_id }}</td>
                <td>{{ mission.id }}</td>
                <td>{{ mission.description }}</td>
                <td>{{ mission.dueDate ? mission.dueDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ mission.status }}</td>
                <td>
                    <a href="{{ path('app_mission_show', {'mission_id': mission.mission_id}) }}">show</a>
                    <a href="{{ path('app_mission_edit', {'mission_id': mission.mission_id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mission_new') }}">Create new</a>

{% endblock %}
